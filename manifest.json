{
    "manifest_version": 2,
    "name": "Weather Extension",
    "description": "Search Weather around the globe",
    "version": "1.0.0",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": ["activeTab"],
    "content_security_policy": "script-src 'self' https://apis.google.com https://cors-anywhere.herokuapp.com/ https://dataservice.accuweather.com https://i.pinimg.com/;object-src 'self'",
    "web_accessible_resources": ["extension.js"],
    "icons": { "128": "128.png" }

}